
<div class="container">
	<form action="/question/create" method="POST" class="form-signin">
		<h2 class="form-signing-heading">Create Question</h2>

		<input type="text" class="form-control" placeholder="Type Your Question" name="name">
		<div style="margin:0.7em 0 1em 1.5em;">
			<div id="answers"><input type="text" class="form-control answer" placeholder="Answer1" name="answer1"></div>
			<button id="addAnswer" class="btn btn-danger">+Answer</button>
		</div>

		<input type="submit" class="btn btn-lg btn-primary btn-block" value="Create"/>
		<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
	</form>
</div>